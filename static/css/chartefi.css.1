@import url('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css');

*,
*:after,
*:before {
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

.clearfix:before,
.clearfix:after {
	content: " ";
	display: table;
}

.clearfix:after {
	clear: both;
}

body {
	font-family: 'Montserrat', sans-serif;
	background: #fffcf0;
}

.container {
	width: 90%;
	margin: 0 auto;
	display: flex;
    flex-wrap: wrap;
}
.container a {
    color: #213558;
    text-decoration: none;
    outline: none;
}




/* Fiche Depute */
.depute-identite {
    padding: 10px;
    line-height: 2em;
}
.depute-nom {
    font-weight: bold;
    font-size: 1.6em;
}
.depute-contacts {
    margin-bottom:10px;
}
.depute-contact {
    font-size: 1.4em;
}
.depute-groupe {
    font-size: 1.4em;
    color: #000;
}
.depute-hemicycle {
    margin-left: auto;
}
h1 {
	color: #ccc;
	text-align: center;
}

.tab_container a {
  color: #ccc;
  text-decoration: none;
  outline: none;
}


.tab_container {
	width: 90%;
	margin: 0 auto;
	padding-top: 70px;
	position: relative;
}

.tab_container input, section {
  clear: both;
  padding-top: 10px;
  display: none;
}


.tab_container label {
  font-weight: 700;
  font-size: 18px;
  display: block;
  float: left;
  width: 33%;
  padding: 1.5em;
  color: #fff;
  cursor: pointer;
  text-decoration: none;
  text-align: center;
  background: #82cde2;
}

#tab1:checked ~ #content1,
#tab2:checked ~ #content2,
#tab3:checked ~ #content3
{
  display: block;
  padding: 10px;
  background: #fff;
  color: #213558;
  border-bottom: 2px solid #f0f0f0;
}

.tab_container .tab-content p,
.tab_container .tab-content h3 {
  -webkit-animation: fadeInScale 0.7s ease-in-out;
  -moz-animation: fadeInScale 0.7s ease-in-out;
  animation: fadeInScale 0.7s ease-in-out;
}
.tab_container .tab-content h3  {
  text-align: center;
}

.tab_container [id^="tab"]:checked + label {
  background: #fff;
  box-shadow: inset 0 3px #0CE;
  color: #213558;
}

.tab_container [id^="tab"]:checked + label .fa {
  color: #0CE;
}

.tab_container label .fa {
  font-size: 1.3em;
  margin: 0 0.4em 0 0;
}

.subtab_container a {
  color: #ccc;
  text-decoration: none;
  outline: none;
}


.subtab_container {
	width: 98%;
	margin: 0 auto;
	padding-top: 5px;
	position: relative;
}

.subtab_container input, section {
  clear: both;
  padding-top: 10px;
  display: none;
}


.subtab_container label {
  font-weight: 700;
  font-size: 1em;
  display: block;
  float: left;
  width: 33%;
  padding: 0.5em;
  color: #fff;
  cursor: pointer;
  text-decoration: none;
  text-align: center;
  background: #213558;
}

#subtab1:checked ~ #subcontent1,
#subtab2:checked ~ #subcontent2,
#subtab3:checked ~ #subcontent3
{
  display: block;
  padding: 5px;
  background: #fff;
  color: #213558;
  border-bottom: 2px solid #f0f0f0;
}

.subtab_container .subtab-content h3  {
  text-align: center;
}

.subtab_container [id^="subtab"]:checked + label {
  background: #fff;
  box-shadow: inset 0 3px #0CE;
  color: #213558;
}

.subtab_container [id^="subtab"]:checked + label .fa {
  color: #0CE;
}

.subtab_container label .fa {
  font-size: 1.3em;
  margin: 0 0.4em 0 0;
}



/*Media query*/
@media only screen and (max-width: 900px) {
  .tab_container label span {
    display: none;
  }
  .subtab_container label span {
    display: block;
  }
  
  .container, .tab_container, subtab_container {
    width: 98%;
  }
}

/*Content Animation*/
@keyframes fadeInScale {
  0% {
  	transform: scale(0.9);
  	opacity: 0;
  }
  
  100% {
  	transform: scale(1);
  	opacity: 1;
  }
}

.no_wrap {
  text-align:center;
  color: #0ce;
}
.link {
  text-align:center;
}
